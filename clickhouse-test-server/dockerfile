FROM clickhouse/clickhouse-server:23.3

# Set environment to non-interactive (not strictly necessary here, but safe)
ENV DEBIAN_FRONTEND=noninteractive

# Optional: create /app directory for compatibility with Quix default PYTHONPATH
RUN mkdir -p /app

# Set working directory to satisfy Quixâ€™s Dockerfile conventions
WORKDIR /app

# Optional: if you want to override configs, copy your custom config.xml here
# COPY config.xml /etc/clickhouse-server/config.xml

ENV CLICKHOUSE_USER=clickadmin
ENV CLICKHOUSE_PASSWORD=clickpass

# Optional: expose port for internal reference (Quix will do the actual mapping)
EXPOSE 8123
EXPOSE 9000
